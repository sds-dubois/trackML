<% provide(:title, 'Projects') %>

<div class="jumbotron">

  <h1 class="display-4">Projects</h1>
  <p class="lead text-center">
      <%= link_to "Add new project", "#newModal", data: {toggle: "modal", target: "#newModal"}, class: "nav-link active" %>
  </p>

</div>

<table class="table table-hover table-striped my-5">

  <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Updated</th>
        <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each_with_index do |project, idx| %>
        <tr>
            <td><%= project.id %></td>
            <td><%= link_to project.name, project %></td>
            <td><%= project.updated_at.strftime("%m/%d/%Y %H:%M") %></td>
            <td><%= link_to "x", project, method: :delete, data: { confirm: "Delete full project including models and experiments?" } %></td>
        </tr>
    <% end %>
  </tbody>
</table>


<!-- New Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newModalLabel">Add new project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="col-md-6 col-md-offset-3 m-auto">
            <%= form_for(Project.new) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.submit "Create project", class: "btn btn-primary" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>